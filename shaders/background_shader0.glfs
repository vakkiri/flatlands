#version 330
uniform sampler2D texUnit;

in vec2 texCoord;
in float flife;

void main() {
	vec2 flippedCoord = vec2( texCoord.x, 1.f-texCoord.y );

	gl_FragColor = texture( texUnit, vec2(flippedCoord.x, flippedCoord.y) );
	gl_FragColor.b += 0.6 - 0.2 * cos(flife / 600.f);
	gl_FragColor.g = 0.3 + sin(flife / 60.f) * 0.3f;
	gl_FragColor.r = cos(flife / 57.f) * 0.8f;
	gl_FragColor *= 0.75;
	gl_FragColor.a = 1.f;
}

