#version 420
uniform sampler2D texUnit;

in vec2 texCoord;
in float flife;
layout(location = 0) out vec4 gl_FragColor;

void main() {
	vec2 flippedCoord = vec2( texCoord.x, 1.f-texCoord.y );

	gl_FragColor = texture( texUnit, flippedCoord );

	gl_FragColor.r = flife/512.f;
	gl_FragColor.b = 1.f;
}


