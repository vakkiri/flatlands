#version 420
uniform sampler2D texUnit;

in vec2 texCoord;
in float flife;
layout(location = 0) out vec4 gl_FragColor;

void main() {
	vec2 flippedCoord = vec2( texCoord.x, 1.f-texCoord.y );

	gl_FragColor = texture( texUnit, vec2(flippedCoord.x, flippedCoord.y) );
	gl_FragColor.r += 0.5 * (flife / 600.f);
	gl_FragColor.b -= sin(flife / 12.f) * 0.2f;
	gl_FragColor.g = 0.f;
	gl_FragColor *= 0.8;
	gl_FragColor.a = 0.5f;
}


