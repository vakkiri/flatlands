#version 420
uniform sampler2D texUnit;
uniform float time;

in vec2 texCoord;
layout(location = 0) out vec4 gl_FragColor;

void main() {
	float phase = sin(time);
	vec2 pos2 = vec2(texCoord.x - (8.f / 768.f) * phase, texCoord.y);

	gl_FragColor = texture( texUnit, texCoord );
	vec4 color2 = texture( texUnit, pos2 );

	color2.r = color2.b * phase;

	gl_FragColor = (0.90 * gl_FragColor) + (0.1 * color2);
}

